#!/bin/bash
# Run the project for development.

# shellcheck source=./util.sh  # Optional; fixes shellcheck's `source` warning
_dir="$( dirname "$0" )"
[ -f "${_dir}/util.sh" ] || bash "${_dir}/download-util.sh" || exit 1
source "${_dir}/util.sh"
unset _dir

function main {
  check "cargo"
  local cmd="cargo +nightly-2019-03-01 run $* --features amethyst/nightly"

  if should_run_in_terminal; then
    cmd="${cmd}; echo -e '\n[CONTINUE]'; read -n"
    run_terminal "$cmd"
  else
    $cmd
  fi
}

main "$@"
